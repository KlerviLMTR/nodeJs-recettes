    <script>
      function rechRecettes() {
        // Récupère les caracteres recherches
        var input = document.getElementById("search");
        // Récupère les cartes de recettes
        var cards = document.getElementsByClassName("card");
        
        // Convertit les cartes en tableau a partir de toutes les cartes recup par getEleemntsByClassName
        var cardsArray = Array.prototype.slice.call(cards);
        
        // Boucle sur chaque carte pour afficher ou masquer en fonction de la recherche
        cardsArray.forEach(function(card) {
          // Récupère le titre de la recette
          var title = card.querySelector(".card-title").textContent.toLowerCase();
          
          // Vérifier si le titre de la recette contient la recherche
          if (title.indexOf(input.value.toLowerCase()) > -1) {
            card.style.display = "";
          } else {
            card.style.display = "none";
          }
        });

        
      }
      
      // Attache la fonction à l'événement "keyup" de l'élément d'entrée de recherche
      document.getElementById("search").addEventListener("keyup", rechRecettes);
      
    </script>
    
