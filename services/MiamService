
class MiamService {
    
    // le # permet de rendre l'attribut privé, oui oui on peut !
    #ingredientDAO;

    constructor(ingredientDAO) {
        this.#ingredientDAO = ingredientDAO;
    }

    voirTousLesIngredients = () => {
        return this.#ingredientDAO.voirTousLesIngredients()
    }
}

// ici j'exporte la classe instanciée
// je vais donc pouvoir utiliser ses fonctions directement sans avoir à la réinstancier partout
// BouffeService prend en paramètre un IngredientDAO, je le charge direct en utilisant le require, j'aurais pu faire un ligne intermédiaire : 
// let ingredientDAO = require('../dao/IngredientDAO')
// module.exports = new BouffeService(ingredientDAO)
let ingredientDAO = require('../dao/IngredientDAO')
module.exports = new MiamService(ingredientDAO)